<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.8" client="site" method="upgrade">
	<name>Bulgaria Interactive Map</name>
	<creationDate>18.08.2021</creationDate>
	<author>Cybertrain</author>
	<authorEmail>Cybertrain@padova.it</authorEmail>
	<authorUrl>https://git.asdev.io/</authorUrl>
	<copyright>https://git.asdev.io/</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>1.0</version>
	<description>MOD_FOO_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_bgInteractiveMap">mod_bgInteractiveMap.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<filename>mod_bgInteractiveMap.xml</filename>
	</files>

	<!-- Update servers -->
	<updateservers>
		<server type="extension" priority="1" name="Bulgaria Interactive Map">https://www.example.com/mod_foo.xml</server>
	</updateservers>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="domain"
					type="url"
					label="MOD_FOO_URL_LABEL"
					description="MOD_FOO_URL_DESCRIPTION"
					hint="https://www.example.com"
					filter="url"
					validate="url"
				/>
			</fieldset>
			<fieldset
					name="advanced">
				<field
						name="moduleclass_sfx"
						type="text"
						label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
						description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
